+static bool
+isCryptoCompatible (std::shared_ptr<SDES> original, std::shared_ptr<SDES> answer)
+{
+	bool result = true;
+
+	if (original->isSetCrypto() != answer->isSetCrypto()) {
+		result = false;
+	} else {
+		if (original->isSetCrypto()) {
+			if (original->getCrypto()->getValue() != answer->getCrypto()->getValue())
+				result = false;
+		}
+	}
+	return result;
+}
